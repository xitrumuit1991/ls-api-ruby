<div class="jumbotron" data-pages="parallax">
    <div class="container-fluid sm-p-l-20 sm-p-r-20">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="/acp">Home</a></li>
                <li><a href="/acp/<%= controller_name %>">Users</a></li>
                <li><a href="#" class="active">Detail</a></li>
            </ul>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>
<!-- END JUMBOTRON -->
<!-- START CONTAINER FLUID -->
<div class="container-fluid bg-white">
    <%= render 'shared/alert' %>
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading text-complete">
            <span class="bold text-uppercase">User: <%= @data.name %></span> | (tài khoản: <%= @data.username %>)
        </div>
        <div class="panel-body">
            <div class="pull-left">
                <ul class="nav nav-tabs nav-tabs-simple" role="tablist">
                    <li class="active">
                        <a href="#">Thông tin cá nhân</a>
                    </li>
                    <li class="">
                        <a href="/acp/users/<%= @data.id %>/transactions">Giao dịch</a>
                    </li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
          <form class="form-horizontal">
            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <% if @data.avatar? %>
                    <img src="<%= @data.avatar.minisquare.url %>" class="img-thumbnail">
                  <% else %>
                    <img src="/assets/img/no_image.jpg" class="img-thumbnail">
                  <% end %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Username</label>
                <div class="col-sm-11"><p><%= @data.username %></p></div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Họ tên</label>
                <div class="col-sm-11"><p><%= @data.name %></p></div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Email</label>
                <div class="col-sm-11"><p><%= @data.email %></p></div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Phone</label>
                <div class="col-sm-11"><p><%= @data.phone %></p></div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Cấp độ</label>
                <div class="col-sm-11"><p><%= @data.user_level.level %></p></div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Kinh Nghiệm</label>
                <div class="col-sm-11"><p><%= @data.user_exp %></p></div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <label class="col-sm-1">Active</label>
                <div class="col-sm-11">
                  <div class="checkbox check-success">
                    <input type="checkbox" value="1" class="handle-checkbox" name="actived" id="actived" data-field="actived" <%= @data.actived ? "checked" : "" %>><label for="actived"></label>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
    </div>
    <!-- END PANEL -->
</div>