<div class="jumbotron" data-pages="parallax">
    <div class="container-fluid sm-p-l-20 sm-p-r-20">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="/acp">Home</a></li>
                <li><a href="/acp/<%= controller_name %>">Idols</a></li>
                <li><a href="#" class="active">Idol Detail</a></li>
            </ul>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>
<!-- END JUMBOTRON -->
<!-- START CONTAINER FLUID -->
<div class="container-fluid bg-white">
    <%= render 'shared/alert' %>
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <span class="bold">IDOl: <%= @data.fullname %></span> | (tài khoản: <%= @data.user.username %>)
        </div>
        <div class="panel-body">
            <div class="pull-left">
              <%= render 'nav_tabs' %>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-heading">
          <!-- <div class="pull-left">
              <div class="col-xs-12">
                  <button class="btn multiple-action" data-action="destroy_m"><i class="pg-trash"></i></button>
              </div>
          </div> -->
          <div class="pull-left">
              <div class="col-xs-12">
                  <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
              </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <form action="" method="post" id="data-table">
              <table class="table table-hover demo-table-search data-table">
                <thead>
                  <tr>
                      <!-- <th style="width:3%">
                        <div class="checkbox ">
                          <input type="checkbox" id="check-all">
                          <label for="check-all"></label>
                        </div>
                      </th> -->
                      <th style="width:10%">Ngày</th>
                      <th style="width:30%">Quà tặng được nhận</th>
                      <th style="width:10%">Số lượng</th>
                      <th style="width:20%">Mệnh giá</th>
                      <th style="width:20%">Thành tiền</th>
                      <!-- <th style="width:7%">Action</th> -->
                  </tr>
                </thead>
                <tbody>
                  <% @gifts.each do |item| %>
                    <tr id="row_page_<%= item.id %>">
                      <!-- <td class="v-align-middle">
                        <div class="checkbox ">
                            <input type="checkbox" name="item_id[]" value="<%= item.id %>" class="check-all" id="checkbox-<%= item.id %>">
                            <label for="checkbox-<%= item.id %>"></label>
                        </div>
                      </td> -->
                      <td class="v-align-middle ">
                        <p><%= item.created_at.strftime('%d-%m-%Y') %></p>
                      </td>
                      <td class="v-align-middle">
                        <img src="<%= item.gift.image.square %>" class="img-thumbnail" >
                      </td>
                      <td class="v-align-middle">
                        <p><%= item.quantity %></p>
                      </td>
                      <td class="v-align-middle">
                        <p><%= item.cost %></p>
                      </td>
                      <td class="v-align-middle">
                        <p><%= item.quantity * item.cost %></p>
                      </td>
                      <!-- <td class="v-align-middle">
                        <%= link_to("/acp/broadcasters/#{@data.id}/gift/#{item.id}", {class: "btn btn-xs btn-success", method: 'delete', data: { confirm: 'Are you sure ?'}}) do%><i class="fa fa-trash-o"></i><% end %>
                      </td> -->
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </form>
        </div>
    </div>
    <!-- END PANEL -->
</div>