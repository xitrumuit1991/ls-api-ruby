<div class="jumbotron" data-pages="parallax">
    <div class="container-fluid sm-p-l-20 sm-p-r-20">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="/acp">Home</a></li>
                <li><a href="/acp/<%= controller_name %>">Idols</a></li>
                <li><a href="#" class="active">Idol Detail</a></li>
            </ul>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>
<!-- END JUMBOTRON -->
<!-- START CONTAINER FLUID -->
<div class="container-fluid bg-white">
    <%= render 'shared/alert' %>
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <span class="bold">IDOl: <%= @data.fullname %></span> | (tài khoản: <%= @data.user.username %>)
        </div>
        <div class="panel-body">
            <div class="pull-left">
                <ul class="nav nav-tabs nav-tabs-simple" role="tablist">
                    <li class="">
                        <a href="/acp/broadcasters/<%= @data.id %>/basic/<%= @data.user.id %>">Thông tin cơ bản</a>
                    </li>
                    <li class="">
                        <a href="/acp/broadcasters/<%= @data.id %>/edit">Thông tin nâng cao</a>
                    </li>
                    <li class="">
                        <a href="/acp/broadcasters/<%= @data.id %>/room/<%= @data.rooms.find_by_is_privated(false).id %>">Phòng</a>
                    </li>
                    <li class="">
                        <a href="/acp/broadcasters/<%= @data.id %>/gifts">Quả tặng được nhận</a>
                    </li>
                    <li class="">
                        <a href="/acp/broadcasters/<%= @data.id %>/images">Hình ảnh</a>
                    </li>
                    <li class="active">
                        <a href="#">Videos</a>
                    </li>
                    <li class="">
                        <a href="#">Giao dịch</a>
                    </li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-heading">
          <div class="pull-left">
              <div class="col-xs-12">
                  <button class="btn multiple-action" data-action="destroy_m"><i class="pg-trash"></i></button>
              </div>
          </div>
          <div class="pull-left">
              <div class="col-xs-12">
                  <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
              </div>
          </div>
          <div class="pull-left">
              <div class="col-xs-12">
                  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#model-add-new"><i class="fs-14 pg-plus"></i>Add new</button>
              </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <form action="" method="post" id="data-table">
              <table class="table table-hover demo-table-search data-table">
                <thead>
                  <tr>
                      <th style="width:3%">
                        <div class="checkbox ">
                          <input type="checkbox" id="check-all">
                          <label for="check-all"></label>
                        </div>
                      </th>
                      <th style="width:60%">Video</th>
                      <th style="width:30%">Link Video</th>
                      <th style="width:7%">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @videos.each do |item| %>
                    <tr id="row_page_<%= item.id %>">
                      <td class="v-align-middle">
                        <div class="checkbox ">
                            <input type="checkbox" name="item_id[]" value="<%= item.id %>" class="check-all" id="checkbox-<%= item.id %>">
                            <label for="checkbox-<%= item.id %>"></label>
                        </div>
                      </td>
                      <td class="v-align-middle">
                        <img src="<%= item.thumb %>" class="img-thumbnail" >
                      </td>
                      <td class="v-align-middle">
                        <p><%= item.video %></p>
                      </td>
                      <td class="v-align-middle">
                        <%= link_to("/acp/broadcasters/#{@data.id}/video/#{item.id}", {class: "btn btn-xs btn-success", method: 'delete', data: { confirm: 'Are you sure ?'}}) do%><i class="fa fa-trash-o"></i><% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </form>
        </div>
    </div>
    <!-- END PANEL -->
    <!-- Modal Add New Background Uploaded -->
    <div class="modal fade slide-up disable-scroll" id="model-add-new" tabindex="-1" role="dialog" aria-labelledby="modalSlideUpLabel" aria-hidden="false">
        <div class="modal-dialog">
          <div class="modal-content-wrapper">
            <%= form_tag acp_bct_videos_path, multipart: true do %>
              <input type="hidden" name="bct_video[broadcaster_id]" value="<%= @data.id %>">
              <div class="modal-content">
                <div class="modal-header clearfix text-left">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="pg-close fs-14"></i>
                  </button>
                  <h5>Add new image</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                      <label>Link Video</label>
                      <input type="text" class="form-control" name="bct_video[video]">
                    </div>
                    <div class="form-group">
                      <label>Thumb</label>
                      <input type="text" class="form-control" name="bct_video[thumb]">
                    </div>
                </div>
                <div class="modal-footer"> 
                  <button type="submit" class="btn btn-success">Submit</button>
                  <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fs-14 pg-close"></i>Close</button>
                </div>
              </div>
            <% end %>
          </div>
          <!-- /.modal-content -->
        </div>
    </div>
    <!-- /.modal-dialog -->
</div>