<div class="jumbotron" data-pages="parallax">
    <div class="container-fluid sm-p-l-20 sm-p-r-20">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="/acp">Home</a></li>
                <li><a href="/acp/<%= controller_name %>">Users</a></li>
                <li><a href="#" class="active">User Detail</a></li>
            </ul>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>
<!-- END JUMBOTRON -->
<!-- START CONTAINER FLUID -->
<div class="container-fluid bg-white">
    <%= render 'shared/alert' %>
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <span class="bold">Room: <%= @data.title %></span> | (tài khoản: <%= @data.broadcaster.user.username %>)
        </div>
        <div class="panel-body">
            <%= form_for [:acp, @data], :html => {:class => "form_#{controller_name}"} do |f| %>
                <% if @data.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@data.errors.count, "error") %> prohibited this room type from being saved:</h2>
                    <ul><% @data.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>
                  </div>
                <% end %>
                <div class="form-group">
                  <div class="row">
                    <label class="col-sm-12">Banner</label>
                    <div class="col-sm-5">
                      <img src="<%= @data.thumb_url %>" class="img-thumbnail" >
                      <input type="file" name="room[thumb]" >
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-sm-12">Title</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" name="room[title]" value="<%= @data.title %>" >
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-sm-12">Room type</label>
                    <div class="col-sm-2">
                        <select class="form-control select2" name="room[room_type_id]">
                            <% @room_types.each do |type| %>
                            <option value="<%= type.id %>" <% if type.id == @data.room_type_id %>selected<% end %>><%= type.title %></option>
                            <% end %>
                        </select>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-sm-8">Lịch diễn
                        <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#model-add-new-schedule"><i class="fs-14 pg-plus"></i>Add new</button>
                    </label>
                    <div class="col-sm-8">
                      <table class="table table-hover demo-table-search data-table">
                        <thead>
                          <tr>
                              <th style="width:20%">Ngày bắt đầu</th>
                              <th style="width:20%">Giờ bắt đầu</th>
                              <th style="width:20%">Giờ kết thúc</th>
                              <th style="width:20%">Ngày kết thúc</th>
                              <th style="width:20%"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @data.schedules.each do |schedule| %>
                            <tr>
                              <td class="v-align-middle">
                                <p><%= schedule.start.strftime('%d-%m-%Y') %></p>
                              </td>
                              <td class="v-align-middle">
                                <p><%= schedule.start.strftime('%H:%M') %></p>
                              </td>
                              <td class="v-align-middle">
                                <p><%= schedule.end.strftime('%H:%M') %></p>
                              </td>
                              <td class="v-align-middle">
                                <p><%= schedule.end.strftime('%d-%m-%Y') %></p>
                              </td>
                              <td class="v-align-middle">
                                <a class="btn btn-success pull-right" data-method="delete" href="/acp/broadcasters/"><i class="fa fa-trash-o"></i></a>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-sm-12">Background Default</label>
                    <div class="col-sm-12">
                      <div class="multiple-items">
                        <% @room_backgrounds.each do |image| %>
                            <img src="<%= request.base_url + image.image_url %>" class="img-thumbnail"/>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-sm-12">Background Uploaded</label>
                    <label class="col-sm-12">
                      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#model-add-new-background"><i class="fs-14 pg-plus"></i>Add new</button>
                    </label>
                    <div class="col-sm-12">
                      <div class="multiple-items">
                        <% @data.broadcaster.broadcaster_backgrounds.each do |image| %>
                            <img src="<%= request.base_url + image.image_url %>" class="img-thumbnail"/>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                        <button class="btn btn-success" name="save">Save</button>
                        <button class="btn" name="save_and_add_another">Save and add another</button>
                        <button class="btn" name="save_and_edit">Save and edit</button>
                        <a href="/acp/<%= controller_name %>" class="btn"><i class="fs-14 pg-close"></i>Cancel</a>
                    </div>
                  </div>
                </div>
            <% end %>
        </div>
    </div>
    <!-- END PANEL -->
    <!-- Modal -->
    <div class="modal fade slide-up disable-scroll" id="modal-change-password" tabindex="-1" role="dialog" aria-labelledby="modalSlideUpLabel" aria-hidden="false">
        <div class="modal-dialog ">
          <div class="modal-content-wrapper">
            <%= form_tag "/acp/users/#{@data.id}/change_password" do %>
              <div class="modal-content">
                  <div class="modal-header clearfix text-left">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="pg-close fs-14"></i>
                      </button>
                      <h5>Đổi mật khẩu</h5>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label>Mật khẩu mới</label>
                      <input type="password" name="password" class="form-control" required/>
                    </div>
                    <div class="form-group">
                      <label>Nhập lại mật khẩu</label>
                      <input type="password" name="password_confirmation" class="form-control" required/>
                    </div>
                  </div>
                  <div class="modal-footer"> 
                    <button type="submit" class="btn btn-success">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fs-14 pg-close"></i>Close</button>
                  </div>
              </div>
            <% end %>
          </div>
          <!-- /.modal-content -->
        </div>
    </div>
    <!-- /.modal-dialog -->
</div>