<% if notice %>
<div class="alert alert-info" role="alert">
  <button class="close" data-dismiss="alert"></button>
  <p><%= notice %></p>
</div>
<% end %>

<% if alert %>
<div class="alert alert-danger" role="alert">
  <button class="close" data-dismiss="alert"></button>
  <% if alert.is_a?(Array) %>
  <% alert.each do |msg| %><p><%=msg%></p><% end %>
  <% else %>
  <p><%= alert %></p>
  <% end %>
</div>
<% end %>